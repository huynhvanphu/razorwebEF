@page 
@model razorwebEF.Pages.Blog.IndexModel
@using razorwebEF.Utils

@{
    ViewData["Title"] = "Index";
    int i = 0;
    var paging = new Paging();
    paging.countPages = Model.totalPages;
    paging.currentPage = Model.currentPage;
    paging.UrlGenerator = (int? p) => Url.Page("/Blog/Index", new {p = p});
}


<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>No.</th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].CreatedDated)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Article[0].Content)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Article)
        {
<tr>
    <td>@(++i)</td>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CreatedDated)
    </td>
    @*<td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>*@
    <td>
        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
    </td>
</tr>}
    </tbody>
</table>


<partial name="_Paging" model="@paging" />